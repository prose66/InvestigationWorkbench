{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Unified Event",
  "type": "object",
  "required": [
    "event_ts",
    "source",
    "event_type",
    "host",
    "user",
    "src_ip",
    "dest_ip",
    "process_name",
    "process_cmdline",
    "file_hash",
    "outcome",
    "severity",
    "message"
  ],
  "properties": {
    "event_ts": { "type": "string", "format": "date-time" },
    "source": { "type": "string" },
    "event_type": { "type": "string" },
    "host": { "type": "string" },
    "user": { "type": "string" },
    "src_ip": { "type": "string" },
    "dest_ip": { "type": "string" },
    "process_name": { "type": "string" },
    "process_cmdline": { "type": "string" },
    "file_hash": { "type": "string" },
    "outcome": { "type": "string" },
    "severity": { "type": "string" },
    "message": { "type": "string" },
    "run_id": { "type": "string" },
    "query_name": { "type": "string" },
    "query_text": { "type": "string" },
    "executed_at": { "type": "string", "format": "date-time" },
    "time_start": { "type": "string", "format": "date-time" },
    "time_end": { "type": "string", "format": "date-time" },
    "source_event_id": { "type": "string" },
    "raw_json": { "type": "string" }
  },
  "additionalProperties": true
}
